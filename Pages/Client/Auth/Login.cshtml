@page
@model LoginModel
@{
  ViewData["Title"] = "Client Login";
}

<section class="container px-4 py-4 mx-auto">
  <div class="max-w-sm mx-auto my-auto overflow-hidden bg-white rounded-lg shadow-md dark:bg-gray-800">
    <div class="px-6 py-4">
      <a href="/" class="flex justify-center mx-auto">
        <img class="w-auto h-12" src="/zstore.svg" alt="ZStore">
      </a>
      <h3 class="mt-3 text-xl font-medium text-center text-gray-600 dark:text-gray-200">Welcome Back</h3>
      <p class="mt-1 text-center text-gray-500 dark:text-gray-400">Login to your account</p>
      <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="w-full mt-4">
          <label asp-for="Username" class="block text-sm text-gray-800 dark:text-gray-200"></label>
          <input
            class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300"
            asp-for="Username" placeholder="Your username" aria-label="Username" />
          <span asp-validation-for="Username" class="mt-3 text-xs text-red-400"></span>
        </div>

        <div class="w-full mt-4">
          <label asp-for="Password" class="block text-sm text-gray-800 dark:text-gray-200"></label>
          <input
            class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-lg dark:bg-gray-800 dark:border-gray-600 dark:placeholder-gray-400 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring focus:ring-blue-300"
            type="Password" asp-for="Password" placeholder="Your password" aria-label="Password" />
          <span asp-validation-for="Username" class="mt-3 text-xs text-red-400"></span>
        </div>

        <div class="flex items-center justify-between mt-4">
          <a href="#" class="text-sm text-gray-600 dark:text-gray-200 hover:text-gray-500">Forget Password?</a>

          <button
            type="submit"
            class="px-6 py-2 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50">
            Sign In
          </button>
        </div>
      </form>
    </div>

  </div>
</section>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}