@page
@model IndexModel
@{
  ViewData["Title"] = "ZStore";
}

<header class="bg-white dark:bg-gray-900">
  <div class="container px-6 py-16">
    <div class="items-center px-6 lg:flex">
      <div class="w-full lg:w-1/2">
        <div class="lg:max-w-lg">
          <h1 class="text-3xl font-semibold text-gray-800 dark:text-white lg:text-4xl">
            Discover Everything You Need <br> in <span class="text-blue-500 ">One Place!</span>
          </h1>
          <h3 class="mt-2 text-xl font-semibold text-gray-100">
            zstore.net is the best online shopping platform.
          </h3>
          <p class="mt-3 text-gray-600 dark:text-gray-400">
            Shop the latest trends and top-quality products across a wide range of categories, from the comfort of your
            home.
          </p>
          <div class="flex items-center mt-4">
            <button
              class="bg-blue-500 text-sm sm:text-base text-white rounded-lg hover:bg-blue-500/80 duration-300 transition-colors border border-transparent px-8 py-2">
              Shop Now!
            </button>
            <button
              class="mx-2 bg-white text-gray-700 dark:text-gray-300 text-sm sm:text-base dark:bg-gray-900 dark:border-gray-700 dark:hover:bg-gray-800 rounded-lg hover:bg-gray-100 duration-300 transition-colors border px-8 py-2">
              Explore More!
            </button>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-center w-full mt-6 lg:mt-0 lg:w-1/2">
        <img class="w-full h-full lg:max-w-3xl" src="https://merakiui.com/images/components/Catalogue-pana.svg"
          alt="Catalogue-pana.svg">
      </div>
    </div>
  </div>
</header>
