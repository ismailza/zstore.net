@page
@model IndexModel
@{
  ViewData["Title"] = "Admin Account";
}

<div class="bg-white dark:bg-gray-900">
  <div class="container flex items-center px-6 py-4 mx-auto overflow-x-auto whitespace-nowrap">
    <a href="/admin" class="text-gray-600 dark:text-gray-200">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
        <path
          d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
      </svg>
    </a>
    <span class="mx-5 text-gray-500 dark:text-gray-300 rtl:-scale-x-100">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
          clip-rule="evenodd" />
      </svg>
    </span>
    <span class="text-blue-600 dark:text-blue-400 hover:underline">
      Account
    </span>
  </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
  <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4" role="alert">
    <p>@TempData["SuccessMessage"]</p>
  </div>
}
@if (TempData["ErrorMessage"] != null)
{
  <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
    <p>@TempData["ErrorMessage"]</p>
  </div>
}

<section class="container px-4 mx-auto mt-4">
  <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
    <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">
      Account information
    </h2>
    <form method="post" asp-page-handler="UpdateInfo">
      <input type="hidden" asp-for="Admin.Id" />
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="Admin.Firstname">
            Firstname <span class="text-red-500">*</span>
          </label>
          <input id="firstname" asp-for="Admin.Firstname" placeholder="Your firstname" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="Admin.Lastname">
            Lastname <span class="text-red-500">*</span>
          </label>
          <input id="lastname" asp-for="Admin.Lastname" placeholder="Your lastname" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="Admin.Email">
            Email <span class="text-red-500">*</span>
          </label>
          <input id="email" asp-for="Admin.Email" placeholder="Your email" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
      </div>
      <div class="flex justify-end mt-6">
        <button type="submit"
          class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Save</button>
      </div>
    </form>
  </div>

  <div class="max-w-4xl p-6 mx-auto mt-4 bg-white rounded-md shadow-md dark:bg-gray-800">
    <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">
      Password
    </h2>
    <form method="post" asp-page-handler="UpdatePassword">
      <input type="hidden" asp-for="Admin.Id" />
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-3">
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="CurrentPassword">
            Current password <span class="text-red-500">*</span>
          </label>
          <input id="CurrentPassword" type="password" asp-for="CurrentPassword" placeholder="Your current password"
            required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="NewPassword">
            New password <span class="text-red-500">*</span>
          </label>
          <input id="NewPassword" type="password" asp-for="NewPassword" placeholder="New password" required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
        <div>
          <label class="text-gray-700 dark:text-gray-200" asp-for="ConfirmPassword">
            Confirm password <span class="text-red-500">*</span>
          </label>
          <input id="ConfirmPassword" type="password" asp-for="ConfirmPassword" placeholder="Confirm your password"
            required
            class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring" />
        </div>
      </div>
      <div class="flex justify-end mt-6">
        <button type="submit"
          class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Save</button>
      </div>
    </form>
  </div>
</section>