@page
@model zstore.net.Pages.Admin.Clients.DeleteModel
@{
    ViewData["Title"] = "Delete Admin";
}

<div class="bg-white dark:bg-gray-900">
    <div class="container flex items-center px-6 py-4 mx-auto overflow-x-auto whitespace-nowrap">
        <a href="/Admin" class="text-gray-600 dark:text-gray-200">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
        </a>
        <span class="mx-5 text-gray-500 dark:text-gray-300 rtl:-scale-x-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
        </span>
        <a href="/Admin/Clients" class="text-gray-600 dark:text-gray-200 hover:underline">
            Clients
        </a>
        <span class="mx-5 text-gray-500 dark:text-gray-300 rtl:-scale-x-100">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
        </span>
        <span class="text-blue-600 dark:text-blue-400 hover:underline">
            Delete
        </span>
    </div>
</div>

<section class="container px-4 mx-auto py-4">    
    <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
        <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Delete client</h2>
        <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Are you sure you want to delete this client?</p>

        <div class="flex justify-center items-center gap-x-2">
            <img class="object-cover w-10 h-10 rounded-full" src="/images/placeholder.svg" alt="">
            <div>
                <h2 class="font-medium text-gray-800 dark:text-white">
                    @Model.Client.Lastname @Model.Client.Firstname
                </h2>
                <p class="text-sm font-normal text-gray-600 dark:text-gray-400">
                    @Model.Client.Email
                </p>
            </div>
        </div>
        <form method="post" class="flex flex-col gap-4 mt-4">
            <div asp-validation-summary="ModelOnly" class="mt-3 text-xs text-red-400"></div>
            <input type="hidden" asp-for="Client.Id" />
            <!-- Submit Button -->
            <div class="flex justify-end mt-6 space-x-2">
                <a asp-page="./Index" class="px-8 py-2 bg-white text-gray-700 dark:text-gray-300 dark:bg-gray-900 dark:border-gray-700 dark:hover:bg-gray-800 rounded-md hover:bg-gray-100 border">
                    Cancel
                </a>
                <button class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Confirm Delete</button>
            </div>
        </form>
    </div>
</section>
