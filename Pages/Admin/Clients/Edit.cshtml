@page
@model zstore.net.Pages.Admin.Clients.EditModel
@{
  ViewData["Title"] = "Edit Client";
  var homeUrl = "/Admin";
  var breadcrumbItems = new List<(string Title, string Url)>
  {
    ("Clients", "/Admin/Clients"),
    ("Edit", "#")
  };
}

<partial name="_Breadcrumb" model="(homeUrl, breadcrumbItems)" />

<section class="container px-4 mx-auto py-4">
  <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
    <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Edit client</h2>

    <form method="post" class="flex flex-col gap-4 mt-4" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="mt-3 text-xs text-red-400"></div>
      <input type="hidden" asp-for="Client.Id" />
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Client.Firstname"></label>
        <input asp-for="Client.Firstname" value="@Model.Client?.Firstname" placeholder="Firstname"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Client.Firstname" class="mt-3 text-xs text-red-400"></span>
      </div>
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Client.Lastname"></label>
        <input asp-for="Client.Lastname" value="@Model.Client?.Lastname" placeholder="Lastname"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Client.Lastname" class="mt-3 text-xs text-red-400"></span>
      </div>
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Client.Email"></label>
        <input asp-for="Client.Email" value="@Model.Client?.Email" placeholder="Email"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Client.Email" class="mt-3 text-xs text-red-400"></span>
      </div>
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Client.Phone"></label>
        <input asp-for="Client.Phone" value="@Model.Client?.Phone" placeholder="Phone"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Client.Phone" class="mt-3 text-xs text-red-400"></span>
      </div>
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Client.Username"></label>
        <input asp-for="Client.Username" value="@Model.Client?.Username" placeholder="Username"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Client.Username" class="mt-3 text-xs text-red-400"></span>
      </div>

      @* <!-- Admin Image -->
      <div>
      <label class="text-gray-700 dark:text-gray-200" asp-for="Admin.Image"></label>
      <input asp-for="Admin.Image" value="@Model.Admin?.Image" placeholder="Image" class="block w-full px-4 py-2 mt-2
      text-sm text-gray-700 bg-white border border-gray-200 rounded-md file:bg-gray-200 file:text-gray-700 file:text-sm
      file:px-4 file:py-1 file:border-none file:rounded-full dark:file:bg-gray-900 dark:file:text-gray-200
      dark:text-gray-300 placeholder-gray-400/70 dark:placeholder-gray-500 focus:border-blue-400 focus:outline-none
      focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-800
      dark:focus:border-blue-300" />
      <p asp-validation-for="Admin.Image" class="mt-3 text-xs text-red-400"></p>
      </div> *@

      <!-- Submit Button -->
      <div class="flex justify-end mt-6">
        <button
          class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Update</button>
      </div>
    </form>
  </div>
</section>
