@page
@model zstore.net.Pages.Admin.Admins.DeleteModel
@{
  ViewData["Title"] = "Delete Admin";
  var homeUrl = "/Admin";
  var breadcrumbItems = new List<(string Title, string Url)>
  {
    ("Admins", "/Admin/Admins"),
    ("Delete", "#")
  };
}

<partial name="_Breadcrumb" model="(homeUrl, breadcrumbItems)" />

<section class="container px-4 mx-auto py-4">
  <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
    <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Delete admin</h2>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Are you sure you want to delete this admin?</p>

    <div class="flex justify-center items-center gap-x-2">
      <img class="object-cover w-10 h-10 rounded-full" src="/images/placeholder.svg" alt="">
      <div>
        <h2 class="font-medium text-gray-800 dark:text-white">
          @Model.Admin.Lastname @Model.Admin.Firstname
        </h2>
        <p class="text-sm font-normal text-gray-600 dark:text-gray-400">
          @Model.Admin.Email
        </p>
      </div>
    </div>
    <form method="post" class="flex flex-col gap-4 mt-4">
      <div asp-validation-summary="ModelOnly" class="mt-3 text-xs text-red-400"></div>
      <input type="hidden" asp-for="Admin.Id" />
      <!-- Submit Button -->
      <div class="flex justify-end mt-6 space-x-2">
        <a asp-page="./Index"
          class="px-8 py-2 bg-white text-gray-700 dark:text-gray-300 dark:bg-gray-900 dark:border-gray-700 dark:hover:bg-gray-800 rounded-md hover:bg-gray-100 border">
          Cancel
        </a>
        <button
          class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Confirm
          Delete</button>
      </div>
    </form>
  </div>
</section>
