@page
@model zstore.net.Pages.Admin.Products.CreateModel
@{
  ViewData["Title"] = "New Product";
  var homeUrl = "/Admin";
  var breadcrumbItems = new List<(string Title, string Url)>
  {
    ("Products", "/Admin/Products"),
    ("Create", "#")
  };
}

<partial name="_Breadcrumb" model="(homeUrl, breadcrumbItems)" />

<section class="container px-4 mx-auto py-4">
  <div class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md dark:bg-gray-800">
    <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white">Add new product</h2>

    <form method="post" class="flex flex-col gap-4 mt-4" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="mt-3 text-xs text-red-400"></div>
      <!-- Product Name -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.Name"></label>
        <input asp-for="Product.Name" value="@Model.Product?.Name" placeholder="Name"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Product.Name" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Product Image -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.Image"></label>
        <input asp-for="Product.Image" value="@Model.Product?.Image" placeholder="Image"
          class="block w-full px-4 py-2 mt-2 text-sm text-gray-700 bg-white border border-gray-200 rounded-md file:bg-gray-200 file:text-gray-700 file:text-sm file:px-4 file:py-1 file:border-none file:rounded-full dark:file:bg-gray-900 dark:file:text-gray-200 dark:text-gray-300 placeholder-gray-400/70 dark:placeholder-gray-500 focus:border-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-40 dark:border-gray-600 dark:bg-gray-800 dark:focus:border-blue-300" />
        <span asp-validation-for="Product.Image" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Product Description -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.Description"></label>
        <textarea asp-for="Product.Description" value="@Model.Product?.Description" placeholder="Description" rows="3"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600"></textarea>
        <span asp-validation-for="Product.Description" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Category Dropdown -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.CategoryId">Category</label>
        <select asp-for="Product.CategoryId" asp-items="ViewBag.Categories" value="@Model.Product?.CategoryId"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600">
          <option value="">Select Product Category</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Product Price -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.Price"></label>
        <input asp-for="Product.Price" value="@Model.Product?.Price" placeholder="Price"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Product.Price" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Product Quantity -->
      <div>
        <label class="text-gray-700 dark:text-gray-200" asp-for="Product.Quantity"></label>
        <input asp-for="Product.Quantity" value="@Model.Product?.Quantity" placeholder="Quantity"
          class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600" />
        <span asp-validation-for="Product.Quantity" class="mt-3 text-xs text-red-400"></span>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-end mt-6">
        <button
          class="px-8 py-2 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600">Save</button>
      </div>
    </form>
  </div>
</section>
